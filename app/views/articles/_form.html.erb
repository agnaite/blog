<div class='form_wrapper'>
  <%= form_for(@article, html: {multipart: true}) do |f| %>
    <ul class="form_errors">
      <% @article.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
    <p class=form_title>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p class="form_body">
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.label :tag_list %><br />
      <%= f.text_field :tag_list %>
    </p>
    <p>
      <% if @article.image.exists? %>
        <%= image_tag @article.image.url, class:'img-thumb' %><br/>
      <% end %>
      <%= f.label :image, "Attach an Image" %><br />
      <%= f.file_field :image %>
    </p>
    <p>
      <%= f.submit "Submit", :class => 'submit_btn' %>
    </p>
  <% end %>
</div>
