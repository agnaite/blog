<div class='form_wrapper'>
  <%= form_for(@article) do |f| %>
    <ul class="form_errors">
      <% @article.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
    <p class=form_title>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p class="form_body">
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit "Submit", :class => 'submit_btn' %>
    </p>
  <% end %>
</div>
