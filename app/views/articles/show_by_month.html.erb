<div class="container">
  <h1>Articles By Month</h1>
  <ul class="month_wrap">
      <% @articles_by_month.each do |month, articles| %>
          <li><%= month %><span>(<%= articles.length %>)</span><a class="month_dropdown">></a>
          <div class="month_articles">
            <% articles.each do |article| %>
              <%= link_to article.title, article_path(article.id) %><br />
            <% end %>
          </div>
      <% end %>
    </li>
  </ul>
</div>
